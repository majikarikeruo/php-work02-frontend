// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}


model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  Hamster   Hamster[]
}



// ハムスターモデル
model Hamster {
  id        Int      @id @default(autoincrement())
  User      User @relation(fields: [userId], references: [id])
  userId    Int
  name      String
  kind      Kind     @relation(fields: [kindId], references: [id])
  kindId    Int
  sex       Sex      @relation(fields: [sexId], references: [id])
  sexId     Int
  birthday  DateTime
  photo     String?
  introduce String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
  
  @@index([userId])
}

// ハムスターの性別モデ
model Sex {
  id        Int      @id @default(autoincrement())
  name      String

  hamsters  Hamster[]
}



// ハムスターの種類モデル（ゴールデンとか）
model Kind {
  id        Int      @id @default(autoincrement())
  name      String

  hamsters  Hamster[]
}